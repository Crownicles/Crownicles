{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "checkJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "noResolve": false,
    "noEmitOnError": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "strict": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}